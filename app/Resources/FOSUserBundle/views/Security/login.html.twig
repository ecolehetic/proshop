{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <span class="clearfix"></span>
    {% if error %}
        <span style="display: block;margin-top: 10px;">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post" style="text-align: center;">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Identifiant ou adresse mail *" style="display: block; margin: 20px auto; width: 100%; height: 30px; border: none; border-bottom: 1px solid black;outline:none;"/>

        <input type="password" id="password" name="_password" required="required" placeholder="Mot de passe *" style="display: block; width: 100%; margin: 20px auto; height: 30px; border:none; border-bottom: 1px solid black;outline:none;"/>

        <input type="checkbox" id="remember_me" name="_remember_me" value="on" style="display: inline;width: auto;margin: 0;text-transform: none;"/>
        <label for="remember_me">Rester connect√©</label>
        <div style="text-align: center; margin: 15px auto;">
            <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" style="border:none;cursor:pointer;padding: 15px 24px;color: #fff;text-transform: uppercase;background: #40d0da;">Se connecter</button>
        </div>
    </form>
{% endblock fos_user_content %}
